<QueueForGame>:
    FloatLayout:
        width: 100
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size
        Label:
            text: "Wachtrij Status:"
            id: wachtrijstatus
            font_size: 32
            pos_hint: {"top": 0.9, "center_x": 0.5}
            size: (300, 50)
            size_hint: (None, None)
        Label:
            text: "Je bevindt je nu in de wachtrij\nom een nieuw spel te starten.\nLet op, dit kan even duren!"
            font_size: 32
            pos_hint: {"center_y": 0.5, "center_x": 0.5}
            size: (300,300)
            size_hint: (None, None)
        Button:
            text: "Verlaat wachtrij"
            pos_hint: {"center_x": 0.5, 'bottom':1}
            size: (300, 50)
            font_size: 32
            size_hint: (0.3, 0.2)
            on_press: root.dequeue()
