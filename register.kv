<Register>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Registreer een nieuw account'
            font_size: 32

        Label:
            text: 'Geef hier een gebruikersnaam en een wachtwoord op. Druk daarna op registreer.'

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Gebruikersnaam'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                write_tab: False
                on_parent: root._setup_boxes

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Wachtwoord'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Wachtwoord bevestigen'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password_confirm
                multiline:False
                password:True

        Button:
            text: 'Registreer!'
            font_size: 24
            on_press: root.do_register()
